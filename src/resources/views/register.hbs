<div class="page" style="height: 90vh">
    <div class="form" >
        <div class="form-panel one" style="height: 80vh; padding: 0 45px">
            <div class="form-header" style="margin-bottom: 18px">
                <h1 style="margin-top: 20px; margin-bottom: 0;">Account Register</h1>
            </div>
            <h5 style="color: red; text-align: center; margin-bottom: 20px">{{msg}}</h5>
            <div class="form-content">
                <form action="/users/register" method="post" name="login" style="box-shadow: none; padding: 0 2rem">
                    <div class="form-group">
                        <label for="name">Username</label><input type="text" id="name" name="name"
                            required="required" />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label><input type="email" id="email" name="email"
                            required="required" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label><input type="password" id="password" name="password"
                            required="required" />
                    </div>

                    <div class="form-group">
                        <button type="submit">REGISTER</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="form-panel two"></div>
    </div>
</div>